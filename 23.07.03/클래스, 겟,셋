using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ZooApp01
{
    class Tiger
    {
        public string name;
        public int age;

        public Tiger(string _name)
        {
            name = _name;
        }
        //Getter, Setter
        public void setAge(int _age)
        {
            age = _age;
        }
        public int getAge()
        {
            return age;
        }
        public string getName()
        {
            return name;
        }

    }
    class Lion
    {

    }
    internal class Program
    {
        static void Main(string[] args)
        {
            Tiger t = new Tiger("티몬");
            t.setAge(5);

            Console.WriteLine($"고양이의 이름은 : {t.getName()}");
            Console.WriteLine($"티몬의 나이는 : {t.getAge()}");
        }
    }
}
